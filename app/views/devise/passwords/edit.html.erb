<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.hidden_field :reset_password_token %>
  <div class="limiter">
      <div class="container-login100">
        <div class="wrap-login100">
           <form class="login100-form validate-form">
            <span class="login100-form-title">
              <b>TẠO MẬT KHẨU MỚI</b>
            </span>

            <div class="textwarning">
              <%= render "devise/shared/error_messages", resource: resource %>
              <p class="alert"><%= alert %></p>
              <p class="notice"><%= notice %></p>
                            
                <%# if @minimum_password_length %>
                  <!--<em><%= @minimum_password_length %> characters minimum</em><br /> -->
                <%# end %>   
            </div>

            <div class="wrap-input100 validate-input" >
              <%= f.label :Mật_Khẩu_Mới %>
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "New password", class:"input100" %>  
            </div>
           
            <div class="wrap-input100 validate-input" >
              <span class="focus-input100"></span>  
              <%= f.label :xác_nhận_Mật_Khẩu_Mới %>   
                <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm password", class:"input100" %>
                <br/>
            </div>

            <div class="container-login100-form-btn">
          
              <%= f.submit "Lưu", class:"login100-form-btn" %>
            </div>

           </form>
        </div>
      </div>
    </div>
  <% end %>