<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>
  <div class="limiter">
    <div class="container-login100">
      <div class="wrap-login100">
        <form class="login100-form validate-form">
          <span class="login100-form-title"><b>Sửa Thông Tin Người Dùng</b></span>
          
          <div class="wrap-input100 validate-input">
            <span class="focus-input100" ></span>
              <%= f.label :email %><br />
              <div class="input_login"><%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Hiện đang chờ xác nhận cho: <%= resource.unconfirmed_email %>
              </div>
            <% end %>
          </div>

          <div class="wrap-input100 validate-input">
            <span class="focus-input100"></span>
            <%= f.label :password, 'Mật khẩu' %> <i>(để trống nếu bạn không muốn thay đổi nó)</i><br />
            <div class="input_login"><%= f.password_field :password, autocomplete: "new-password" %>
            </div>
          </div>
    

          <div class="wrap-input100 validate-input">
            <span class="focus-input100"></span>
            <%= f.label :password_confirmation,'Xác nhận mật khẩu' %>
            <i>
              <% if @minimum_password_length %>
                <em><%= @minimum_password_length %> Tối thiểu ký tự</em>
              <% end %>
            </i>
            <div class="input_login"><%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
          </div>
          

          <div class="wrap-input100 validate-input">
            <span class="focus-input100"></span>
            <%= f.label :current_password,'Mật khẩu hiện tại'%> <i>(chúng tôi cần mật khẩu hiện tại của bạn để xác nhận thay đổi của bạn)</i><br />
            <div class="input_login"><%= f.password_field :current_password, autocomplete: "current-password" %>
            </div><br/>
          </div>

          <div class="container-login100-form-btn">
            <%= f.submit "Cập Nhật" , class:"login100-form-btn"%>
          </div>

          <div class="container-login100-form-btn">
            <%= link_to "Trở Lại", :back%>
          </div>
        
        </form>
      </div>
    </div>
  </div>
<% end %>

