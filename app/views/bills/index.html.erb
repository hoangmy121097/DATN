<h1>Bills</h1>

<table>
  <thead>
    <tr>
      <th>Customer name</th>
      <th>Customer address</th>
      <th>Customer phone</th>
      <th>Email</th>
      <th>Delivery date</th>
      <th>Status pay</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.customer_name %></td>
        <td><%= bill.customer_address %></td>
        <td><%= bill.customer_phone %></td>
        <td><%= bill.email %></td>
        <td><%= bill.delivery_date %></td>
        <td><%= bill.status_pay %></td>
        <td><%= link_to 'Show', bill %></td>
        <td><%= link_to 'Edit', edit_bill_path(bill) %></td>
        <td><%= link_to 'Destroy', bill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

