<p id="notice"><%= notice %></p>

<h1>Line Items</h1>

<table>
  <thead>
    <tr>
      <th>Sản Phẩm</th>
      <th>Giỏ hàng</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.product %></td>
        <td><%= line_item.cart %></td>
        <td><%= link_to 'Hiển thị', line_item %></td>
        <td><%= link_to 'Sửa', edit_line_item_path(line_item) %></td>
        <td><%= link_to 'Xoá', line_item, method: :delete, data: { confirm: 'Bạn có chắc?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Sản phẩm mới', new_line_item_path %>
